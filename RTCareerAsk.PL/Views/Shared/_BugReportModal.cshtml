@model CatchModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="postQuestionModalLabel">请输入错误报告</h4>
    </div>
    @using (Html.BeginForm("CreateNewBugReport", "Test", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "formBugReport" }))
    {
        <div class="modal-body post">
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    <span class="help-block validate">@Html.ValidationMessageFor(model => model.Title)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "6" })
                    <span class="help-block validate">@Html.ValidationMessageFor(model => model.Description)</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Priority, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    @Html.DropDownListFor(model => model.Priority, ViewBag.Priorities as List<SelectListItem>, new { multiple = "", @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Attachment, new { @class = "col-lg-2 control-label" })
                <div class="col-lg-10">
                    <input type="file" name="Attachment" class="form-control" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <input type="submit" class="btn btn-primary" value="提交报告" />
        </div>
    }
    <script type="text/javascript">
        $.validator.unobtrusive.parse("#formBugReport");
    </script>
</div>