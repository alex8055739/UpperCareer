@model List<RTCareerAsk.Models.QuestionInfoModel>

<div class="content-info">
    <ul class="list-group box" data-target="@(Model.Count > 0 ? Model.First().Creator.UserID : string.Empty)" data-type="1">
        @foreach (RTCareerAsk.Models.QuestionInfoModel q in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("QuestionDetail", "Question", new { id = q.ID })" style="color:#70BF40">
                    <h4 class="list-group-item-heading">@q.Title</h4>
                </a>
                <p class="list-group-item-text">@Html.Raw(HttpUtility.HtmlDecode(q.Content))</p>
                <p class="extra">@q.CreateBefore</p>
            </li>
        }
    </ul>
</div>