@model IEnumerable<RTCareerAsk.Models.QuestionInfoModel>

<div class="content-info">
    <div class="list-group box">
        @foreach (RTCareerAsk.Models.QuestionInfoModel q in Model)
        {
            <div class="list-group-item">
                <div class="section-wrap">
                    <div class="section number">
                        <span class="marked-number">@q.VoteDiff</span>
                        <span>推荐</span>
                    </div>
                    <div class="section number reply-count">
                        <span class="marked-number">@q.AnswerCount</span>
                        <span>回答</span>
                    </div>
                    <div class="section text">
                        @Html.ActionLink(q.Title, "QuestionDetail", "Question", new { id = q.ID }, new { style = "font-size:16px" })
                        @Html.UpperAuthor(q.Creator.Name, q.CreateBefore)
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    var url = '@Url.Action("LoadContentUpdate", "Question")';

    $(document).ready(function () {
        $('.content-info').upperscrollpaging(url, {
            contentType: GetContentTypeId()
        });
    });
</script>
