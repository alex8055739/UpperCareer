@model RTCareerAsk.Models.QuestionInfoModel

@{
    string feedId = ViewData["FeedId"].ToString();
}

<div id="@string.Format("divQuestion{0}", feedId)" class="panel-collapse collapse" style="overflow:hidden">
    <div class="feed-question clearfix">
        <div class="header">
            @Html.UpperNameTag(Model.Creator)
        </div>
        <div id="@string.Format("divQContent{0}", Model.ID)" class="content">
            @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
        </div>
    </div>
</div>
<div class="action">
    <span>推荐 @(Model.VoteDiff)</span>
    <span>回答（@(Model.SubPostCount)）</span>
    @if (!string.IsNullOrEmpty(Model.Content))
    {
        <span><a data-toggle="collapse" href="@string.Format("#divQuestion{0}", feedId)" class="question-collapse" aria-expanded="false" aria-controls="collapseTwo"><span class="glyphicon glyphicon-plus"></span>&nbsp;查看详情</a></span>
    }
</div>
